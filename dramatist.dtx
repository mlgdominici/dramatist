  \expandafter\newlength\csname DR@#1@#2\endcsname%
  \define@key{#1}{#2}[#3]{%
    \global\expandafter\setlength\csname DR@#1@#2\endcsname{##1}%
  }%
}
%    \end{macrocode}
% \end{macro}
% \begin{macro}{\DR@define@boolkey}
